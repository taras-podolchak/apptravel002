    <style name="Theme.Apptravel002_val" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/valienteAzulColor
        </item> <!-- color de la barra ( Inicio, V_01, V_02 etc ) -->
