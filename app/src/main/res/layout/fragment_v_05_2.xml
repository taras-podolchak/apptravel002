<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/v05_2_Layout"
    android:background="@drawable/fondo_para_valiente"
    tools:context=".ui.controller.V_05_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/v01_contenedor_blanco"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/v05_2_titulo_eve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:gravity="center_horizontal"
                android:text="v05_2_titulo_eve"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/v05_2_salidacoordenadastru_eve"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:text="v05_2_salidacoordenadastru_eve"
                    android:textAlignment="textEnd"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/v05_2_llegadacoordenadastru_eve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="v05_2_llegadacoordenadastru_eve"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/v05_2_descgeneral_eve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v05_2_descgeneral_eve"
                android:textAlignment="textStart"
                android:textSize="14sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/v05_2_rcvAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:scrollbars="vertical">

            </androidx.recyclerview.widget.RecyclerView>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/v05_2_btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/v01_boton_formato_l"
                android:text="Volver" />

            <Button
                android:id="@+id/v05_2_btnConfirmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/v01_boton_formato_r"
                android:text="Me interesa" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>