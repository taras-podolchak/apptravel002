        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/a_add_eve_btn_cancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/btn_formato_left_prs"
                android:text="Cancelar" />

            <Button
                android:id="@+id/a_add_eve_btn_limpiar_campos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/btn_formato_center_prs"
                android:text="Limpiar campos" />

            <Button
                android:id="@+id/a_add_eve_btn_guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/btn_formato_right_prs"
                android:text="Guardar" />
        </LinearLayout>
